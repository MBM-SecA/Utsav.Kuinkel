@model List<Department>
@{
  ViewData["Title"] = "Employees";
}



<h1 class="d-inline">Departments (@Model.Count)</h1> <a asp-controller="Department" asp-action="Add"><button
    type="button" class="btn btn-outline-info d-inline float-right ">Add Department</button></a>
</br>
</br>

@* <span>&nbsp;</span> *@
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Department Name</th>
      <th scope="col">Code</th>
      <th scope="col">Description</th>
      <th scope="col">Start Date</th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    @foreach (var department in Model)
    {
      <tr scope="row">
        <td>
          <a href="/employee/detail?id=@department.Id">
            @department.Id
          </a>
        </td>
        <td>@department.DepartmentName</td>
        <td>@department.Code</td>
        <td>@department.Description</td>
        <td>@department.StartDate</td>
        <td>
          <a asp-controller="Department" asp-action="Edit" asp-route-id="@department.Id">
            <button type="button" class="btn btn-outline-info">
              Edit
            </button>
          </a>
        </td>
        <td>
          <a asp-controller="Department" asp-action="Delete" asp-route-id="@department.Id">
            <button type="button" class="btn btn-outline-danger">
              Delete
            </button>
          </a>
        </td>

      </tr>
    }
  </tbody>
</table>
