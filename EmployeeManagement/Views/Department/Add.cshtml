@model Department

@{
    ViewData["Title"] = "Add Department";
}

<form asp-controller="Department" asp-action="Add" method="POST">
    <div class="form-group">
        <label asp-for="DepartmentName"></label>
        <span asp-validation-for="DepartmentName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="DepartmentName" placeholder="Enter Department Name">
    </div>
    <div class="form-group">
        <label asp-for="Code"></label>
        <span asp-validation-for="Code" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Code" placeholder="Enter code for the department">
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description" placeholder="Enter Description"></textarea>
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input type="text" class="form-control" asp-for="StartDate" placeholder="Enter the started date">
    </div>
    <button type="submit" class="btn btn-primary">Add</button>
</form>