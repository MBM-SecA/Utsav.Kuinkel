@model Person

@{
    ViewData["Title"] = "Add Employee";
}

<form asp-controller="Employee" asp-action="Add" method="POST">
    <div class="form-group">
        <label asp-for="FirstName"></label>
        <span asp-validation-for="FirstName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="FirstName" placeholder="Enter First Name">
    </div>
    <div class="form-group">
        <label asp-for="LastName"></label>
        <span asp-validation-for="LastName" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="LastName" placeholder="Enter Last Name">
    </div>
    <div class="form-group">
        <label asp-for="Address"></label>
        <textarea class="form-control" asp-for="Address" placeholder="Enter Address"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Gender"></label>
        <span asp-validation-for="Gender" class="text-danger"></span>
        <input type="text" class="form-control" asp-for="Gender" placeholder="Enter gender">
    </div>
    <div class="form-group">
        <label asp-for="Salary"></label>
        <input type="number" class="form-control" asp-for="Salary" placeholder="Enter salary">
    </div>

    <button type="submit" class="btn btn-primary">Add</button>
</form>