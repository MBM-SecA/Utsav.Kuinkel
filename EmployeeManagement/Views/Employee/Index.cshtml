@model List<Person>
@{
  ViewData["Title"] = "Employees";
}



<h1 class="d-inline">All Employee (@Model.Count)</h1> <a asp-controller="Employee" asp-action="Add"><button
  type="button" class="btn btn-outline-info d-inline float-right ">Add employee</button></a>
    </br>
    </br>

@* <span>&nbsp;</span> *@
<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Address</th>
      <th scope="col">Gender</th>
      <th scope="col">Salary</th>
    </tr>
  </thead>
  <tbody>
    @foreach (var employee in Model)
    {
      <tr scope="row">
        <td>
          <a href="/employee/detail?id=@employee.Id">
            @employee.FirstName
          </a>
        </td>
        <td>@employee.LastName</td>
        <td>@employee.Address</td>
        <td>@employee.Gender</td>
        <td>@employee.Salary</td>
      </tr>
    }
  </tbody>
</table>
